---
interface Props {
  title: string;
  description?: string;
}

const { title, description = '小說發布平台' } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-TW">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@400;600&family=Noto+Serif+TC:wght@400;600&display=swap" rel="stylesheet" />
  <title>{title}</title>
</head>
<body>
  <header class="site-header">
    <div class="container">
      <a href="/" class="site-title">Novel Platform</a>
      <nav class="site-nav">
        <a href="/">首頁</a>
        <a href="/about">關於</a>
      </nav>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <footer class="site-footer">
    <div class="container">
      <p>&copy; 2026 Novel Platform. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
